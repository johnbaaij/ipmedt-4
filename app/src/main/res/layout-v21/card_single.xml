<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">


    <android.support.v7.widget.CardView
        android:id="@+id/cardTop"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:clickable="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintBottom_toTopOf="@+id/cardBottomRight"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.133">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="193dp"
                android:layout_height="110dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                card_view:layout_constraintHorizontal_bias="0.434"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/moreButton"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="87dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="32dp"
                android:text="Meer"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/cardTitle" />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="164dp"
                android:layout_height="32dp"
                android:layout_margin="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="8dp"
                android:text="Title"
                android:textSize="14sp"
                card_view:layout_constraintHorizontal_bias="0.944"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/overflow"
                tools:text="Title" />


            <TextView
                android:id="@+id/text"
                android:layout_width="185dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:paddingLeft="8dp"
                android:text="tekst"
                android:textSize="12sp"
                card_view:layout_constraintHorizontal_bias="0.454"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/cardTitle"
                tools:layout_editor_absoluteX="-9dp"
                tools:text="tekst" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>