<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/picuteConfirm"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginRight="109dp"
        android:elevation="0dp"
        android:text="Bevestig"
        android:textColorLink="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuleer"
        app:layout_constraintRight_toLeftOf="@+id/picuteConfirm"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="72dp" />

    <ImageView
        android:id="@+id/profilePicMain"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/krukken_icon" />

    <ImageView
        android:id="@+id/profilePicSelect1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/krukken_icon"
        app:layout_constraintRight_toLeftOf="@+id/profilePicSelect2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePicMain"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/profilePicSelect2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_brokenboneicon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="367dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePicMain"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/profilePicSelect3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_aidkiticon"
        app:layout_constraintLeft_toRightOf="@+id/profilePicSelect2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePicMain"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/profilePicSelect4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_gipsvoeticon"
        app:layout_constraintRight_toLeftOf="@+id/profilePicSelect5"
        android:layout_marginRight="42dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePicSelect2" />

    <ImageView
        android:id="@+id/profilePicSelect5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_ambulanceicon"
        android:layout_marginRight="105dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePicSelect2" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="104dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        app:layout_constraintGuide_begin="212dp"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>