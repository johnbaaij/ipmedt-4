<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardTop"
        android:layout_width="370dp"
        android:layout_height="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteY="10dp"
        tools:layout_editor_absoluteX="7dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/imageCardTop"
                android:layout_width="111dp"
                android:layout_height="63dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:layout_editor_absoluteX="132dp"
                tools:layout_editor_absoluteY="7dp" />

            <TextView
                android:id="@+id/textTop"
                android:layout_width="73dp"
                android:layout_height="19dp"
                android:text="Top Text"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="151dp"
                tools:layout_editor_absoluteY="79dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardMidRight"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="134dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textMidRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mid Right"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="117dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardMidLeft"
        android:layout_width="180dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="134dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textMidLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mid Left"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="117dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardLowRight"
        android:layout_width="180dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="291dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLowRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Right"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="117dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardlowLeft"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="291dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLowLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Left"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="117dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>