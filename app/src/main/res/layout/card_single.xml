<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardTop"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:clickable="true"
        card_view:cardCornerRadius="2dp"
        card_view:layout_constraintBottom_toTopOf="@+id/cardBottomRight"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.133"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="154dp"
                android:layout_height="27dp"
                android:layout_marginStart="7dp"
                android:text="Title"
                tools:text="Title"
                tools:layout_editor_absoluteY="107dp"
                android:layout_marginRight="0dp"
                card_view:layout_constraintRight_toLeftOf="@+id/cardTitle" />


            <ImageView
                android:id="@+id/overflow"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteY="99dp"
                tools:layout_editor_absoluteX="85dp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="134dp"
                android:layout_height="27dp"
                android:text="tekst"
                tools:text="tekst"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="@+id/cardTitle"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/cardTitle" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>